@model IEnumerable<SportPredictionsSystem.Web.ViewModels.FootballPredictionViewModel>

@{
    ViewBag.Title = "Home Page";
}

@section styles {
    @Styles.Render("~/Content/styles/home/home.css")
    <style>
        .predictions-table {
            background-color: #354458;
            margin-top: 30px;
        }

            .predictions-table thead tr th, .predictions-table tbody tr td {
                padding: 15px;
            }
    </style>
}

<div class="intro-header">
    <div class="container">
        <div class="row intro-header-info-wrapper">
            <div class="col-lg-12">
                <div class="intro-message text-center">
                    <h1>King Kong Football Tips</h1>
                    <h3><strong>Bet Wisely, Earn Highly</strong></h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        <li>
                            <a href="https://twitter.com/SBootstrap" class="btn btn-default btn-lg"><i class="fa fa-info fa-fw"></i>About us</a>
                        </li>
                        <li>
                            <a href="#" class="btn btn-default btn-lg"><i class="fa fa-line-chart fa-fw"></i> Statistics</a>
                        </li>
                        <li>
                            <a href="https://github.com/IronSummitMedia/startbootstrap" class="btn btn-default btn-lg"><i class="fa fa-question fa-fw"></i>FAQ</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>About us</h2>
            <p>
                ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
                enables a clean separation of concerns and gives you full control over markup
                for enjoyable, agile development.
            </p>
            <p>
                <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a>
            </p>
        </div>
        <div class="col-md-4">
            <h2>Subscriptions</h2>
            <p>You can choose from 3 different types of subscriptions</p>
            <p>
                <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="BA7HRKXCUCNYY">
                    <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                    <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                </form>
            </p>
            <p>
                <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a>
            </p>
        </div>
        <div class="col-md-4">
            <h2>Tipsters</h2>
            <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
            <p>
                <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a>
            </p>
        </div>
    </div>

    <div class="row">
        <h2>История на прогнози</h2>
        @if (Model.Any())
        {
            <table class="table table-striped table-hover predictions-table">
                <thead>
                    <tr>
                        <th>Ден</th>
                        <th>Домакин</th>
                        <th>Гост</th>
                        <th>Прогноза</th>
                        <th>Коефициент</th>
                        <th>Резултат</th>
                        <th>Печалба?</th>
                    </tr>
                </thead>
                <tbody>
                    @Html.DisplayFor(x => x)
                </tbody>
            </table>
        }
    </div>
</div>